{
    "compilerOptions": {
        "allowJs": true,
        "alwaysStrict": true,
        "lib": [ "dom", "es5", "es2015.promise", "es2015.iterable", "scripthost" ],
        "importHelpers": true,
        "module": "commonjs",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es5"
    },
    "compileOnSave": false
}